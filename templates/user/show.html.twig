{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
        </tbody>
    </table>

    <a style="margin:5px" class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Bewerken</a>

    {{ include('user/_delete_form.html.twig') }}

    <a style="margin:5px" class="btn btn-primary" href="{{ path('user_index') }}">Terug naar gebruikerslijst</a>

{% endblock %}
