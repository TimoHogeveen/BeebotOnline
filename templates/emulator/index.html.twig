{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="/css/emulator.css">
{% endblock %}
{% block title %}Living Lab Bot{% endblock %}

{% block body %}
<div class="sidenav">

{# Buttons vervangen door https://fontawesome.com/ #}

<table id="buttons" style="margin-left:auto;margin-right:auto;">
		<tbody>
      		<tr>
				<td style="vertical-align:top; text-align:left">
					<input id="home" type="image" class="button green" src="images/reset.png" width="80">
				</td>
				<td style="vertical-align:top; text-align:center">
					<input id="fd" type="image" class="button orange" src="images/beebot-fd.png">
				</td>
				<td style="vertical-align:top; text-align:right">
					<input id="stop_run" type="image" class="button red" src="images/stop.png" disabled="disabled" width="80">
				</td>
			</tr>
			<tr>
				<td>
					<input id="lt" type="image" class="button orange" src="images/beebot-lt.png">
				</td>
				<td>
					<input id="go" type="image" class="button ltgreen" src="images/beebot-go.png">
				</td>
				<td>
					<input id="rt" type="image" class="button orange" src="images/beebot-rt.png">
				</td>
			</tr>
			<tr>
				<td style="vertical-align: bottom; text-align:left">
					<input id="stop" type="image" class="button blue" src="images/beebot-stop.png">
				</td>
				<td style="vertical-align:bottom; text-align:center">
					<input id="bk" type="image" class="button orange" src="images/beebot-bk.png">
				</td>
				<td style="vertical-align: bottom; text-align:right">
					<input id="pause" type="image" class="button blue" src="images/beebot-pause.png">
				</td>
			</tr>
		</tbody>
  </table>
  
  <p id="commands"></p> 

<form class="dropdowns" action="">
  <label for="category">Kies een categorie:</label>
  <select class="categorydropdown" name="category" id="category">
  		<option disabled selected="selected"> Klik hier voor categoriën </option>
    {% for category in categories  %}
         <option value="{{ category.id }}">{{ category }}</option>
    {% endfor %}

  </select>
<br>
<br>
<br>
  <label for="mat">Kies een mat:</label>
  <select class="mattendropdown" name="mat" id="mat">
  </select>
  <br><br>
  <input type="button" id="matbutton" value="Kies Mat" />
</form>
<div class="options">
{% if is_granted('ROLE_ADMIN')%}
    <a href="{{ path('mat_index') }}">Naar matten lijst</a>
    <a href="{{ path('category_index') }}">Naar categoriën lijst</a>
	<a href="{{ path('user_index') }}">Naar gebruiker lijst</a>
    <a href="{{ path('app_logout') }}">Uitloggen</a>
{% else %}
	{% if is_granted('ROLE_USER') %}
	 Welkom bij Living Lab bot {{ app.user.firstname }}!
	 <a href="{{ path('app_logout') }}">Uitloggen</a>
	{% else %}
	<a href="{{ path('app_login') }}">Inloggen</a>
    <a href="{{ path('app_register') }}">Registreer</a>
	{% endif %}
{% endif %}

 </div>
</div>
<div class="creditmenu">
</div>

<div class="right">
<div id="playground">
<canvas id="bot" draggable="true" style="display: block;"></canvas>
<img id="currentmat" draggable="false">
<img id="botimg" src="/images/beebot.png" style="position: absolute; left: -1000px; top: -1000px">
</div>
</div>
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
 <script type="text/javascript" src="/js/main.js"></script>      
 <script type="text/javascript" src="/js/handlers.js"></script>          
 <script type="text/javascript" src="/js/beebot.js"></script>                 
{% endblock %}

